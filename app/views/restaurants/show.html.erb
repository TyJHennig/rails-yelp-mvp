<div class="container">
  <div class="justify-content-center align-items-center d-flex my-5">
    <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" class="rounded-circle" width="120px" height="120px" alt="...">
    <h1><%= @restaurant.name %></h1>
  </div>
  <p class="card-text">📍 <%= @restaurant.address %></p>
  <p class="card-text">🍽 <%= @restaurant.category %></p>

  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
      <li class="list-group-item"><%= review.rating %></li>
    <% end %>
  </ul>

  <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
  <%= link_to 'Edit', restaurant_path(@restaurant), class: "btn btn-dark" %>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
</div>
