<div class="container justify-content-center">'
<h1>Restaurants</h1>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-6 col-lg-4">
        <div class="card mb-3">
          <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80<%= restaurant.name %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text">📍 <%= restaurant.address %></p>
            <p class="card-text">🍽 <%= restaurant.category %> </p>
            <%= link_to 'Know more...', restaurant_path(restaurant), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-6 col-lg-4">
      <div class="card mb-3">
      <div class="card-body">
      <h5 class="card-title justify-content-center"><%= link_to 'Add New Restaurant', new_restaurant_path(@restaurant), class: "btn btn-primary" %></h5>
      </div>
      </div>
    </div>
  </div>


</div>
